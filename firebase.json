{
  "hosting": {
    "public": "public",
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    }, {
      "source": "/any{,/**}",
      "destination": "/index.html"
    },
    {
      "source": "/foo{,/**}",
      "destination": "/index.html"
    }, {
      "source": "!/@(js|css)/**",
      "destination": "/index.html"
    },
    {
      "source": "**", "function": "app"
      } ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "function":{
    "predeploy":[
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"

    ]
  }
}
